{
  "name": "vmirella-mdlinks",
  "version": "1.0.0",
  "description": "Librería para validación y estadísticas de Markdown",
  "main": "./index",
  "author": "Virginia Contreras",
  "license": "MIT",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "htmlhint": "htmlhint src/*.html test/*.html",
    "eslint": "eslint --ext .js src/ test/",
    "pretest": "npm run eslint && npm run htmlhint",
    "test-browser": "opener ./test/index.html",
    "test-node": "nyc mocha ./test/headless.js && nyc report --reporter=html",
    "test": "npm run test-node && npm run test-browser jest --coverage"
  },
  "dependencies": {
    "chai": "^4.1.2",
    "commander": "^2.17.1",
    "eslint": "^4.19.1",
    "grpc": "^1.13.1",
    "htmlhint": "^0.9.13",
    "http": "0.0.0",
    "mocha": "^5.1.1",
    "node-fetch": "^2.2.0",
    "nyc": "^11.7.1",
    "opener": "^1.4.3",
    "path": "^0.12.7",
    "request": "^2.88.0",
    "server": "^1.0.18",
    "user": "0.0.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "jest": "^23.5.0"
  },
  "bin": {
    "mdlinks": "./cli.js"
  }
}
